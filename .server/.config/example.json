{
  "servers": [
    {
      "port": 3008,
      "name": "example",
      "version": "1.0.0",
      "notfound": "./404.html",
      "servererror": "./500.html",
      "log": "./access.log",
      "bodylimit": 10485760,
      "timeout": 30000,
      "uploaddir": "./uploads",
      "index": "./index.html",
      "root": "./",
      "routes": [
        {
          "path": "/",
          "source": "./index.html",
          "method": ["GET"]
        },
        {
          "path": "/api/users",
          "source": "./users.json",
          "method": ["GET", "POST"]
        },
        {
          "path": "/upload",
          "source": "./upload.html",
          "method": ["GET", "POST"]
        }
      ]
    }
  ]
}